<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebUI</title>

    @* Development ortamında Vite dev server *@
    @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
    {
        <script type="module" src="http://localhost:3000/js/main.js"></script>
    }
    else
    {
        @* Production ortamında build edilmiş dosyalar *@
        <link rel="stylesheet" href="~/dist/assets/main.css" asp-append-version="true" />
    }
</head>

<body class="bg-gray-50">
    <partial name="_Header" />
    <div class="container mx-auto px-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <partial name="_Footer" />

    @* jQuery - her ortamda kullanılabilir *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @* Production ortamında JS dosyaları *@
    @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") != "Development")
    {
        <script src="~/dist/assets/main.js" asp-append-version="true"></script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>